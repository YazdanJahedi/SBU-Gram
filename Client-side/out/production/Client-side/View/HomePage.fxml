<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<TabPane maxHeight="600.0" maxWidth="400.0" minHeight="600.0" minWidth="400.0" prefHeight="600.0" prefWidth="400.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.HomePageController">
  <tabs>
    <Tab fx:id="homeTab" closable="false" onSelectionChanged="#goToHomeTab" text="Home">
      <content>
            <Pane style="-fx-background-color: #D7EBFF;" />
      </content>
    </Tab>
      <Tab fx:id="directTab" closable="false" onSelectionChanged="#goToDirectTab" text="Direct message">
        <content>
            <Pane>
               <children>
                  <Label layoutX="150.0" layoutY="120.0" text="COMING SOON!" />
               </children>
            </Pane>
        </content>
      </Tab>
      <Tab fx:id="newPostTab" closable="false" onSelectionChanged="#goToNewPostTab" text="New post">
        <content>
            <Pane style="-fx-background-color: #D7EBFF;" />
        </content>
      </Tab>
      <Tab fx:id="searchTab" closable="false" onSelectionChanged="#goToSearchTab" text="Search">
        <content>
            <Pane style="-fx-background-color: #D7EBFF;">
               <children>
                  <TextField layoutX="28.0" layoutY="40.0" prefHeight="25.0" prefWidth="265.0" />
                  <Button layoutX="309.0" layoutY="40.0" mnemonicParsing="false" text="Search" />
               </children>
            </Pane>
        </content>
      </Tab>
      <Tab fx:id="MyProfileTab" closable="false" onSelectionChanged="#goToMyProfileTab" text="My profile">
        <content>
            <Pane style="-fx-background-color: #D7EBFF;">
               <children>
                  <ImageView fx:id="profileImage" fitHeight="110.0" fitWidth="110.0" layoutX="22.0" layoutY="41.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="usernameLabel" layoutX="22.0" layoutY="16.0" prefHeight="22.0" prefWidth="269.0" text="username" textFill="#0e0ec3">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Label>
                  <Label fx:id="nameLabel" layoutX="22.0" layoutY="152.0" prefHeight="17.0" prefWidth="196.0" text="name" />
                  <Label fx:id="birthDateLabel" layoutX="272.0" layoutY="152.0" prefHeight="17.0" prefWidth="109.0" text="birth date" />
                  <Label fx:id="bioLabel" layoutX="22.0" layoutY="174.0" prefHeight="18.0" prefWidth="358.0" text="bio">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label layoutX="172.0" layoutY="72.0" text="Followers" textFill="#0e0ec3">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <Label layoutX="292.0" layoutY="72.0" text="Followings" textFill="#0e0ec3">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <Label fx:id="followersNumberLabel" layoutX="171.0" layoutY="100.0" prefHeight="17.0" prefWidth="68.0" text="num1" />
                  <Label fx:id="followingsNumberLabel" layoutX="292.0" layoutY="100.0" prefHeight="17.0" prefWidth="74.0" text="num2" />
                  <Button fx:id="changeProfileButton" layoutX="24.0" layoutY="206.0" mnemonicParsing="false" onMouseClicked="#changeProfile" prefHeight="25.0" prefWidth="147.0" text="Change profile" textFill="#0e0ec3" />
                  <Button fx:id="logOutButton" layoutX="310.0" layoutY="15.0" mnemonicParsing="false" onMouseClicked="#logOut" text="LOG OUT" textFill="#171212" />
                  <Button fx:id="deleteAccountButton" layoutX="228.0" layoutY="207.0" mnemonicParsing="false" onMouseClicked="#deleteAccount" prefHeight="25.0" prefWidth="147.0" text="Delete account" textFill="#d30e0e" />
               </children>
            </Pane>
        </content>
      </Tab>
  </tabs>
</TabPane>
